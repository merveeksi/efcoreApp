@model efcoreApp.Data.KursKayit

<h2>Kurs Kayıt Ekleme</h2>
<hr>
<form asp-controller="KursKayit" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="OgrenciId" class="form-label">Öğrenci</label>
        <select asp-items="ViewBag.Ogrenciler" class="form-control"></select>
    </div> 
    <div class="mb-3">
        <label asp-for="KursId" class="form-label">Kurs</label>
        <input asp-items="ViewBag.Kurslar" class="form-control">
    </div> 
    
    <button type="submit" class="btn btn-outline-dark">Kaydet</button>
</form>